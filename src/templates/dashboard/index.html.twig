{% extends 'base.html.twig' %}

{% block title %}Dashboard Example{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date</th>

        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.createdAt | date("m/d/Y g:i:sA", "America/New_York") }}</td>
            </tr>
        {%  endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date</th>
        </tr>
        </tfoot>
    </table>
    <div class="row">
        <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
</div>
    <script>
        new DataTable('#example');
    </script>
{% endblock %}
